# ! NB: this file is kept for reference, and will be deleted before https://github.com/omnidotdev/sigil/pull/1 is ready

name: Test 🧪

on:
  push:
    branches: [master]
  pull_request:
    branches: [master]

jobs:
  test_unit:
    name: Run unit tests 🃏
    timeout-minutes: 60
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: oven-sh/setup-bun@v1
      - name: Install dependencies
        run: bun i
      - name: Run unit tests
        run: bun test:ci

  coverage:
    name: Determine code coverage 📊
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: ArtiomTr/jest-coverage-report-action@v2
        with:
          package-manager: bun
          test-script: bun test:coverage
          annotations: failed-tests
